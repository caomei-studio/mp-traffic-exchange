:host {
    background-color: orange;
    color: #FFF;
    font-size: 24rpx;
    text-align: center;
    position: fixed;
    right: 0;
    bottom: 120rpx;

    height: 80rpx;
    width: 250rpx;

    border-top-left-radius: 20% 50%;
    border-bottom-left-radius: 20% 50%;
}

.ad {
    box-sizing: border-box;
    padding: 0 10rpx 0 30rpx;
    height: 100%;
    width: 100%;

    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.ad__avatar {
    flex: 0 0 72rpx;
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    display: inline-block;
    margin-right: 10rpx;
    background-color: transparent;
    background-size: 100%;
    background-size: cover;
}

.ad__name {
    flex: 1 1;
    max-height: 60rpx;
    line-height: 30rpx;
    overflow: hidden;
    overflow-wrap: break-word;
    word-wrap: break-word;
}

.trans {
    animation: trans 4s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in;
}

@keyframes trans {
    0%   {
        opacity: 0;
    }
    20%  {
        opacity: 1;
    }
    90%  {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}
